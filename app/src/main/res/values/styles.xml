<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <!-- Deep Orange -->
        <!-- http://www.google.com/design/spec/style/color.html#color-color-palette -->
        <!--   your app branding color for the app bar -->

        <item name="colorPrimary">@color/colorPrimary</item><!--8bc34a toolbar color  -->

        <!--   darker variant for the status bar and contextual app bars -->

        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!--7CB342   -->

        <!--   theme UI controls like checkboxes and text fields -->

        <item name="colorAccent">@color/colorAccent</item><!--cddc39  uppermost -->
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="ToolbarCustomIconColor" parent="AppTheme">
        <!-- android:textColorSecondary is used for coloring the navigation drawer icon and up arrow. -->
        <item name="android:textColorSecondary">#fff</item><!--FF0000  b90606 -->
    </style>

</resources>
