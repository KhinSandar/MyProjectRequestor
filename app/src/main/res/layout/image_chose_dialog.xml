<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"

    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/ly0">
        <TextView
            android:id="@+id/rate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Requestor"
            android:textSize="24dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark" />
        </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@+id/ly0"
        android:id="@+id/ly1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:lineSpacingExtra="6dp"
            android:textSize="20sp"
            android:text="Please Chose Image or Camera Roll!"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/txt_head" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ly1"
        android:id="@+id/ly2"
        android:padding="10dp"
        android:gravity="center">

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Camera"
            android:textColor="@color/colorPrimaryDark"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_border"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:id="@+id/btn_camera_chose" />

        <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="Image Choose"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/rounded_border"
            android:textSize="20sp"
            android:textAllCaps="false"

            android:id="@+id/btn_gallery_chose" />

       <!-- <Button
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:text="No, thanks"
            android:layout_margin="10dp"
            android:textAllCaps="false"

            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/rounded_border"
            android:textSize="20sp"
            android:id="@+id/btn_no_thz" />-->
    </LinearLayout>
</RelativeLayout>