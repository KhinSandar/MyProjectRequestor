<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    tools:context="deleva.com.requester.app.RegisterActivtiy">

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/register_progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:barColor="@color/colorPrimary"
        app:progressIndeterminate="true"
        android:visibility="invisible"/>

    <LinearLayout
        android:id="@+id/register_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Name :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Email :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Password :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Mobile No :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Address :"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Business Type"
            android:id="@+id/textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Business Address :"
            android:id="@+id/textView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:text="Business Address II"
            android:id="@+id/textView4" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/register_layout2"
        android:layout_toRightOf="@id/register_layout1"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">


        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_name"
            android:layout_width="200dp"
            android:layout_height="35dp"
            whatever:testType="personName"
            whatever:emptyErrorString="@string/empty_string"/>

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_email"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            whatever:testType="email"
            whatever:emptyErrorString="@string/empty_string"/>


        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            whatever:testType="nocheck"
            whatever:emptyErrorString="@string/empty_string"/>


        <com.andreabaccega.widget.FormEditText

            android:id="@+id/register_phone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="phone"
            whatever:testType="phone"
            whatever:emptyErrorString="@string/empty_string"/>


        <com.andreabaccega.widget.FormEditText

            android:id="@+id/register_address"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            whatever:testType="nocheck"
            whatever:emptyErrorString="@string/empty_string"/>

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_business_type"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            whatever:testType="nocheck"
            whatever:emptyErrorString="@string/empty_string"/>

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_business_add"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            whatever:testType="nocheck"
            whatever:emptyErrorString="@string/empty_string"/>

        <com.andreabaccega.widget.FormEditText
            android:id="@+id/register_business_add_2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            whatever:testType="nocheck"
            whatever:emptyErrorString="@string/empty_string"/>

    </LinearLayout>

    <Button
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_below="@id/register_layout2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textAllCaps="false"

        android:text="Register"

        android:textSize="25sp" />

    <!--<TextView
        android:id="@+id/register_button"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:text="Register"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@id/register_layout2"
        android:layout_below="@id/register_layout2"/>-->

</RelativeLayout>
